<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/up_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="onButtonClick"
            android:background="@drawable/arrow_up"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/down_button" />

        <Button
            android:id="@+id/turn_left_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="onButtonClick"
            android:background="@drawable/arrow_left"
            android:layout_alignTop="@+id/turn_right_button"
            android:layout_marginLeft="84dp" />

        <Button
            android:id="@+id/turn_right_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="onButtonClick"
            android:background="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/up_button" />
        <Button
            android:id="@+id/down_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/arrow_down"
            android:onClick="onButtonClick"
            android:layout_below="@id/up_button"
            android:layout_marginLeft="236dp" />

    </RelativeLayout>



</RelativeLayout>